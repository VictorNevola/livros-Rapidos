    <ul>
      <li>
        <a onclick="openMenu(this)">
          <img id="expand" class="icon-img" src="../images/expand.svg" alt="">
        </a>
        <a class="side-menu-item" href="">Menu</a>
      </li>
      <li>
        <a href="/landingPage">
