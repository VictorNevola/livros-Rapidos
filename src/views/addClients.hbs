  <div class="wrapper">
    <table align="center" cellspacing=2 cellpadding=5 id='data-table'>
      <tr>
        <td>
          <form id="create-new-client">

            <input type="text" id='clientName' placeholder="Nome">
            <input type="text" id='clientEmail' placeholder="E-mail">
            <input type="text" id='clientTellphone' placeholder="Telefone">

            <button type="submit">Adicionar</button>
          </form>
        </td>
      </tr>

      <tr>
        <th>Nome</th>
        <th>E-mail</th>
        <th>Telefone</th>
      </tr>
      {{!-- 
      <tr id='row1'>
        <td id='name_row1'>Teste1</td>
