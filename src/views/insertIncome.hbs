<div class="title">   
  <h2>Adicionar Receita</h2>
  <h4>Adicione os dados da receita abaixo</h4>
</div>
<div class="income-container">
  <div class="form-container">
  <form class="form-Insert" id="create-new-income">
    <fieldset>
      <fieldset>
      <label>Cliente:</label>
      <select name="clients" id="clients">
      {{#each clients}}
      <option value={{_id}}>{{name}}</option>
      {{/each}}
      </select>
      <a href="/addClients" title="Adicionar cliente">+</a>
      </fieldset>
      <fieldset>
      <label >Quantidade:</label>
      <input class="amount" type="number" name="amount" value="0" step="any" title="Adicionar quantidade, Não utilizar virgula somente ponto!">
      </fieldset>
      <fieldset>
      <label >Valor unitario R$:</label>
      <input class="valueUnit" type="number" name="valueUnit" value="0" step="any" title="Adicionar valor unitario, Não utilizar virgula somente ponto!">
      </fieldset>
      <fieldset>
      <label id="valueTotal"> Valor total:<strong>R$ 0,00 </strong></label>
      </fieldset>
    </fieldset>
    <fieldset>
      <fieldset>
      <label>Forma de Pagamento:</label>
      <input type="text" name="formPGTO">
      </fieldset>
      <fieldset>
      <label>Vencimento:</label>
      <input type="date" name="maturity">
      </fieldset>
      <fieldset>
      <label>Descrição:</label>
      <input type="text" name="description">
      </fieldset>
      <fieldset>
      <label>Categoria:</label>
      <input type="text" name="category">
      </fieldset>
    </fieldset>
    </div>
    <div class="button-add">
    <button type="submit">Adicionar</button>
    <div class="message-container"></div>
    </div>
  </form>
</div>


<section id="income-List">
    <h3> Lista de entradas </h3> 
    <div class="list-container">
    {{#each financialIncomes}}
    <div id="income">
        <div value="{{idCliente}}"> <strong>Cliente: </strong>{{nameClient}}</div>
        <div> <strong>Quantidade: </strong>{{amount}}</div>
        <div> <strong>Valor unitario: </strong>R$  {{valueUnit}}</div>
        <div><strong>Valor Total: </strong>R$ {{valueTotal}}</div>
        <div><strong>Forma de PGTO:  </strong>{{formPGTO}}</div>
        <div><strong>Vencimento:  </strong>{{maturityFormat}}</div>
        <div><strong>Categoria:  </strong>{{category}}</div>
        <div><strong>Descrição:  </strong> {{description}}</div>
        <button class="btn-delete" name="{{_id}}" type="button">Excluir</button>
        <button class="btn-edit" name="{{_id}}" type="button">Editar</button>
    </div>
    {{/each}}
    </div>  
</section>

